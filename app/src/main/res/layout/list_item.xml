<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:background="@color/pacificBlue"
    android:elevation="2dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageBusInList"
        android:layout_width="60dp"
        android:layout_marginTop="2dp"
        android:layout_height="58dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_bus" />

    <TextView
        android:id="@+id/companyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_toRightOf="@+id/imageBusInList"
        android:text="Company Name"
        android:textColor="@color/aliceBlue"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/busType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/companyName"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:text="Type"
        android:textColor="#eee"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/destination"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:text="Time: "
        android:textColor="#eee"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/ic_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/companyName"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/imageBusInList"
        android:text="From: "
        android:textColor="#eee"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/companyName"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/ic_from"
        android:text="Origin "
        android:textColor="#eee"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ic_from"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/imageBusInList"
        android:text="To: "
        android:textColor="#eee"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ic_from"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/to"
        android:text="Destination"
        android:textColor="#eee"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>
