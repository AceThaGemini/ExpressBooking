<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".BusDetailsActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        android:elevation="4dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageBusInDetails"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/abstract_fast" />

        <TextView
            android:id="@+id/companyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="164dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/colorAccentWithAlpha"
            android:gravity="center"
            android:minWidth="144dp"
            android:text="Company Name"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/busType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/companyName"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/colorAccentWithAlpha"
            android:gravity="center"
            android:minWidth="80dp"
            android:text="Bus type"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ic_from"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_below="@+id/imageBusInDetails"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/circle_half_left"
            android:gravity="center"
            android:text="From:"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/origin"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_below="@+id/imageBusInDetails"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/ic_from"
            android:background="@drawable/circle_half_right"
            android:backgroundTint="@color/malibulight"
            android:gravity="center_horizontal"
            android:minWidth="80dp"
            android:text="Origin"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/to"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:layout_below="@+id/imageBusInDetails"
            android:layout_marginRight="2dp"
            android:layout_marginTop="16dp"
            android:layout_toLeftOf="@+id/destination"
            android:background="@drawable/circle_half_left"
            android:gravity="center"
            android:text="To:"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/destination"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imageBusInDetails"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/circle_half_right"
            android:gravity="center_horizontal"
            android:minWidth="80dp"
            android:text="Destination"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/line1"
            android:layout_width="280dp"
            android:layout_height="1dp"
            android:layout_below="@id/origin"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_shape"
            android:tint="@color/colorTartOrange" />

        <TextView
            android:id="@+id/takeOff"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_below="@+id/line1"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/circle_half_left"
            android:gravity="center"
            android:minWidth="70dp"
            android:text="Time:"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_below="@+id/line1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/takeOff"
            android:background="@drawable/circle_half_right"
            android:gravity="center"
            android:minWidth="120dp"
            android:text="06:45:00 am"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/line2"
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_below="@id/takeOff"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_shape"
            android:tint="@color/colorTartOrange" />


        <TextView
            android:id="@+id/fare"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_below="@+id/line2"
            android:layout_marginTop="16dp"
            android:background="@drawable/circle_half_right"
            android:elevation="2dp"
            android:gravity="center"
            android:minWidth="120dp"
            android:text="25,000/="
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tzs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="33dp"
            android:elevation="2dp"
            android:text="TZS"
            android:textColor="#fff"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iconLocation"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/imageBusInDetails"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_location" />

        <ImageView
            android:id="@+id/iconTime"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/line1"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_schedule" />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:layout_marginTop="120dp"
            android:elevation="6dp"
            android:src="@drawable/ic_check_book"
            android:translationZ="12dp" />

    </RelativeLayout>
</LinearLayout>
