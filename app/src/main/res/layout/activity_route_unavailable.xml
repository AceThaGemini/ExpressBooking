<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RouteUnavailableActivity">


    <ImageView
        android:id="@+id/icon"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginRight="8dp"
        android:paddingLeft="24dp"
        android:paddingRight="10dp"
        android:elevation="2dp"
        android:paddingTop="12dp"
        android:paddingBottom="11dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/circle_half_right"
        android:backgroundTint="@color/colorTartOrange"
        android:src="@drawable/ic_error_location" />

    <TextView
        android:id="@+id/noRouteText"
        android:layout_width="wrap_content"
        android:layout_height="84dp"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="84dp"
        android:layout_toRightOf="@+id/icon"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/malibulight"
        android:elevation="1.6dp"
        android:gravity="center_vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="Sorry, No such rout from bla bla bla to yada yada yada!!"
        android:textColor="#fff"
        android:textSize="16sp" />

    <Button
        android:layout_width="200dp"
        android:id="@+id/chooseAgainBtn"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noRouteText"
        android:layout_centerInParent="true"
        android:layout_marginTop="160dp"
        android:background="@drawable/button_shape"
        android:text="Choose again" />

</RelativeLayout>
